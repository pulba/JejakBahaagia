---
import { Icon } from 'astro-iconify';
import '@fontsource/the-nautigal';
import '@fontsource/mr-de-haviland';
import Logo from '../components/logo.astro';
import Animation from './animation.astro';
const { colors } = Astro.props
---


<section class={`relative bg-cover bg-no-repeat bg-top bg-fixed py-20 before:content-[''] before:bg-gradient-to-b before:from-${ colors } before:to-transparent before:inset-0 before:bg-cover before:absolute`} style="background-image: url(/assets/ring-footer.jpg)">
    <div class="container text-center mx-auto relative z-10">
      <div class="flex flex-col items-center justify-center">
        <p class="animate-fadedown text-xl max-w-prose mx-auto font-bold mt-5 font-poppins text-white">Terimakasih</p>
        <h2 class="animate-faderight text-5xl lg:text-8xl text-white font-nautigal leading-7">untuk</h2>
         <p class="animate-fadeleft max-w-prose text-xl mx-auto font-bold font-poppins text-white capitalize">segenap keluarga besar mempelai</p>
         <p class="animate-fadeup mx-auto mt-5 pt-8 font-poppins text-white text-center flex justify-center items-center gap-1">Made with by</p>
         <Logo file="jejakbahagiawhite"/>
      </div>
      <div class="animate-fadeup flex gap-3 text-center justify-center mt-4">
        <a href="/"><Icon name="mdi:instagram" class="w-8 h-8 text-white" />
        </a>
        <a href="/"><Icon name="mdi:phone-incoming" class="w-8 h-8 text-white"/>
        </a>
      </div>
    </div>
    </div>
    <Animation />
  </section>