<script>
  const button = document.querySelector(".icon") as HTMLElement;
  const message = document.querySelector(".copy-message") as HTMLElement;
  
  function copyToClipBoard(){
    const copyContent = document.querySelector(".copy-content") as HTMLElement;
    navigator.clipboard.writeText(copyContent.innerHTML)
    .then(() => {
      message.style.display = "block";
      setTimeout(() => {
        message.style.display = "none";
      }, 2000);
    })
    .catch(err => {
      console.error('Gagal menyalin teks: ', err);
    });
  }
  
  if(button){
    button.addEventListener("click", function(){
      copyToClipBoard();
    });
  }
  </script>