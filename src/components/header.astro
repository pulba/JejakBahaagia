---
import '@fontsource/poppins';
import { Icon } from 'astro-iconify';
import '@fontsource/mr-de-haviland';
import '@fontsource/the-nautigal';
import Logo from './logo.astro';
---

<nav x-data="{ isOpen: false }" class="relative bg-white shadow bg-gray-50">
  <div class="container px-6 py-4 mx-auto relative w-full flex justify-between items-center [&>*]:lg:w-1/3 [&>*]:font-poppins">
      
    <Logo file="JejakBahagia" />
      <!-- Mobile menu button -->
      <div class="flex md:hidden justify-between items-center z-40">
        <button x-cloak @click="isOpen = !isOpen" type="button" class="text-gray-500 [&>*]:w-6 [&>*]:h-6" aria-label="toggle menu">
            <Icon name="mdi:equal" x-show="!isOpen"/>
            <Icon name="mdi:close" x-show="isOpen" />
        </button>
      </div>
      <!-- Mobile Menu open: "block", Menu closed: "hidden" -->
      <div x-cloak :class="[isOpen ? 'translateX-100 opacity-100' : 'translateX-0 opacity-0']" class="absolute h-fit inset-0 z-20 w-full px-6 py-4 mt-20 transition-all duration-700 ease-in-out bg-white md:mt-0 md:p-0 md:top-0 md:relative md:opacity-100 md:translate-x-0 md:flex md:items-center md:justify-evenly">
          <div class="flex flex-col items-center justify-center text-center gap-4 md:flex-row [&>*]:text-gray-800/75 [&>*]:md:mx-2 [&>*]:w-fit [&>*]:relative [&>*]:transition-all [&>*]:w-min-content
            [&>*]:before:w-0 [&>*]:before:h-[2px] [&>*]:before:absolute [&>*]:before:-bottom-[3px] [&>*]:before:right-0 [&>*]:before:bg-pink-600 [&>*]:before:transition-all [&>*]:before:duration-700
            hover:[&>*]:before:w-full hover:[&>*]:before:left-0 hover:[&>*]:before:bg-pink-600 hover:[&>*]:text-pink-600">
              <a href="/" class="nav">Home</a>
              <a href="/about" class="nav">About</a>
              <a href="/tema" class="nav">Tema</a>
              <a href="/harga" class="nav">Harga</a>
              <a href="/contact" class="nav">Contact</a>
          </div>
          <div class="relative mt-4 md:mt-0 flex flex-col items-center ">
            <a href="/pesan">
              <button class="px-4 py-2 z-50 relative md:hidden block bg-pink-600 w-max rounded-full text-white font-bold font-poppins flex gap-1 transition-all duration-700 ease-linear hover:bg-white hover:text-pink-600 hover:ring hover:ring-pink-700 hover:ring-1">Buat Undangan</button>
            </a>
            
          </div>
      </div>
      <div class="relative mt-4 md:mt-0 hidden md:flex justify-end">
        <a href="/pesan">
          <button class="px-4 py-2 z-50 relative bg-pink-600 w-max rounded-full text-white font-bold font-poppins flex gap-1 transition-all duration-700 ease-linear hover:bg-white hover:text-pink-600 hover:ring hover:ring-pink-600 hover:ring-1">Buat Undangan</button>
        </a>
        
    </div>
  </div>
</nav>
