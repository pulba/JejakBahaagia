---
import Page from '../layouts/page.astro';
import '@fontsource/poppins';
import { Icon } from 'astro-iconify';
const facebook = "facebook";
const userfb = "JejakBahagia";
const instagram = "instagram";
const userig = "JejakBahagia";
---

<Page title="Contact" desc="Ini halaman contact dari undangan" subs="Lebih Dekat dengan Kami">
  <div class="flex flex-col items-center space-y-3 [&>*]:flex [&>*]:flex-row [&>*]:gap-2 [&>*]:justify-center [&>*]:items-center [&>*]:border-b">
    <div>
      <a href={`https://www.${instagram}.com/${userig}`} class="flex flex-row gap-2 items-center">
        <Icon name="mdi:instagram" class="w-10 h-10 text-pink-700 hover:text-white hover:bg-pink-700 bg-white p-2 rounded-full" />@{userig}
      </a>
    </div>
    <div>
      <a href={`https://www.${facebook}.com/${userfb}`} class="flex flex-row gap-2 items-center">
      <Icon name="mdi:facebook" class="w-10 h-10 text-pink-700 hover:text-white hover:bg-pink-700 bg-white p-2 rounded-full" />@{userfb}
    </a>
    </div>
    <div>
      <a href="https://wa.me/6281532094978?text=Hallo kak, saya buat undangan dong!">
      <Icon name="mdi:whatsapp" class="w-10 h-10 text-pink-700 hover:text-white hover:bg-pink-700 bg-white p-1 rounded-full" />
      </a>
      <p>+62 815-3209-4978</p>
    </div>
  </div>
</Page>
