---
import Noheader from '../../layouts/noheader.astro';
import '@fontsource/great-vibes';
import '@fontsource-variable/josefin-sans';
import { Icon } from 'astro-iconify';
import Namatamu from '../../layouts/namatamu.astro'
import Payment from '../../layouts/payment.astro'
import Rsvp from '../../layouts/rsvp.astro'
import Countdown from '../../layouts/countdown.astro'
import Footerpost from '../../layouts/footer-post.astro'
import Audio from '../../layouts/audio.astro'
import Animation from '../../layouts/animation.astro'

const { frontmatter } = Astro.props;

---

<Noheader title={ frontmatter.title } desc={ frontmatter.desc }>
  
  <input type="checkbox" id="toggle" class="peer hidden peer-checked:transition-all peer-checked:duration-700 peer-checked:ease-linear"/>
  <section class=`animasi relative h-screen bg-cover bg-center flex items-center overflow-hidden peer-checked:h-0 peer-checked:transition-all peer-checked:duration-700 peer-checked:ease-linear peer-checked:delay-500 before:content-[''] ${frontmatter.before} before:inset-0 before:bg-opacity-60 before:bg-cover before:absolute`
    style={`background-image:url(${frontmatter.cover})`}>
    <div class="absolute overflow-hidden z-20 w-full h-[100%] [&>*]:absolute [&>*]:object-cover [&>*]:w-1/2 [&>*]:lg:w-1/5">
      <div>
        <img src=`${frontmatter.dekorsc}` class="" alt="JejakBahagia" />
      </div>
      <div class="bottom-0 right-0">
        <img src=`${frontmatter.dekorsc}` class="rotate-180" alt="JejakBahagia" />
      </div>
    </div>
    <div class="container mx-auto flex flex-col justify-center items-center relative z-50">
    <h1 class=`animate-fadedown text-xl mt-8 font-josefin font-semibold ${frontmatter.txfs}`>
    Wedding Invitation
    </h1>
        <div class=`mx-auto text-center ${frontmatter.txfs}`>
            <div class="animate-zoomout flex flex-col sm:flex-row gap-x-8 gap-y-4 text-center font-great text-center text-6xl lg:text-8xl">
                <span>{ frontmatter.female }</span>
                <span > & </span> 
                <span> { frontmatter.male } </span> 
            </div>
            <h3 class="animate-faderight mt-2 font-poppins">Dear Mr./Mrs./Ms.</h3>
            <h4 id="invite-name" class="animate-fadeleft text-2xl my-3 capitalize">
                <Namatamu /> nama tamu
            </h4>
        </div>
        <label
            for="toggle" id="toaudio"
            class=`animate-fadeup mt-5 px-6 py-2 relative rounded-full shadow-xl font-bold flex gap-1 ${frontmatter.txfs} ${frontmatter.bgsc}`
            >Open Invitation <Icon name="mdi:love-letter" class="w-5 h-5" /></label
        >
    </div>
  </section>
  <main id="myDIV" class=`hidden relative peer-checked:block ${frontmatter.bgth}`>
    <section class=`animasi1 relative h-screen bg-cover bg-center mx-auto overflow-hidden before:content-[''] before:bg-gradient-to-t before:to-transparent before:inset-0 before:bg-cover before:absolute ${frontmatter.from}` style={`background-image:url(${frontmatter.imgsc})`}>
      <div class="absolute overflow-hidden z-20 w-full h-[100%] [&>*]:absolute [&>*]:object-cover [&>*]:w-1/2 [&>*]:lg:w-1/5">
        <div class="left-0 bottom-0">
          <img src=`${frontmatter.dekorsc}` class="rotate-90 -scale-100" alt="JejakBahagia" />
        </div>
        <div class="bottom-0 right-0">
          <img src=`${frontmatter.dekorsc}` class="rotate-180" alt="JejakBahagia" />
        </div>
      </div>
      <div class="container mx-auto h-screen flex flex-col justify-end items-end relative z-10 font-josefin">
      <div class="mx-auto text-center flex flex-col items-center">
        <h2 class=`animate-faderight text-xl mt-4 ${frontmatter.txfs}`>The Wedding of</h2>
        <div
        class=`animate-zoomout flex flex-col sm:flex-row text-center font-great gap-x-8 gap-y-4 text-center text-6xl lg:text-8xl ${frontmatter.txfs}`>
          <span>{ frontmatter.female }</span>
          <span class=`${frontmatter.txfs}`> & </span> 
          <span> { frontmatter.male } </span> 
        </div>
        <h3 class=`animate-fadeup text-xl md:text-2xl ${frontmatter.txfs}`>{ frontmatter.date }</h3>
      </div>
      </div>
    </section>
    <section class="animasi5 relative">
      <div class="absolute overflow-hidden z-20 w-full h-[100%] [&>*]:absolute [&>*]:object-cover [&>*]:w-1/2 [&>*]:lg:w-1/5">
        <div>
          <img src=`${frontmatter.dekorsc}` class="" alt="JejakBahagia" />
        </div>
        <div class="right-0 top-0">
          <img src=`${frontmatter.dekorsc}` class="rotate-90 right-0 top-0" alt="JejakBahagia" />
        </div>
      </div>
      <div class="container py-32 mx-auto relative z-10">
        <div class=`text-center my-5 ${frontmatter.txfs}`>
          <h2 class=`fade-down opacity-0 text-xl md:text-2xl font-bold mt-5 md:mt-0 mb-3 ${frontmatter.txfs}`>Countdown to</h2>
          <h1 class="fade-down opacity-0 text-center font-great text-4xl md:text-6xl lg:text-8xl">
            Our Happy Day
          </h1>
        </div>
        <div id="timer" class=`fade-up opacity-0  grid grid-cols-2 md:grid-cols-4 gap-y-8 justify-center text-center items-center mt-20 sm:px-20 max-w-3xl mx-auto *:text-center *:text-4xl *:sm:text-6xl *:font-medium *:p-1 ${frontmatter.txfs}`>
        </div>
        <Countdown/>
      </div>
    </section>
    <section class="animasi2 overflow-hidden relative -mt-20">
      <div class="absolute overflow-hidden z-20 w-full h-[100%] [&>*]:absolute [&>*]:object-cover [&>*]:w-1/2 [&>*]:lg:w-1/5">
        <div class="left-0 bottom-0">
          <img src=`${frontmatter.dekorsc}` class="rotate-90 -scale-100" alt="JejakBahagia" />
        </div>
        <div class="bottom-0 right-0">
          <img src=`${frontmatter.dekorsc}` class="rotate-180" alt="JejakBahagia" />
        </div>
      </div>       
      <div class="container mx-auto py-20 px-6">
        <div class=`w-full max-w-screen-md mx-auto relative rounded-3xl shadow-lg ${frontmatter.bgfs}`>
          <div class=`py-20 px-6 flex flex-col text-center items-center relative ${frontmatter.txth}`>
            <h2 class="fade-down text-center font-great text-6xl lg:text-8xl my-6">
              Quote
            </h2>
            <p class="fade-up opacity-0 sm:max-w-prose px-5 sm:px-0 max-w-none text-sm font-josefin">
              {frontmatter.quote}
            </p>
          </div>
          <div class=`fade-down flex flex-col mt-5 text-center items-center mb-9 ${frontmatter.txth}`>
              <h1 class="fade-down opacity-0 text-center font-great text-6xl lg:text-8xl">
                Bride x Groom
              </h1>
              <p class="fade-right opacity-0 font-medium pb-8 text-lg font-josefin">
                We Are Getting Married
              </p>
          </div>
          <div class="mx-auto pb-20 px-6 ">
            <div class="flex flex-col lg:flex-row justify-center items-center gap-11 gap-y-11 max-w-4xl mx-auto *:text-center">
            <div class="w-full flex flex-col items-center">
              <div class="fade-right opacity-0">
                <div class="relative flex items-center justify-center w-full">
                    <div class="relative flex items-center justify-center w-40 md:w-72">
                      <div
                      class="w-28 h-36 md:w-56 md:h-64 bg-cover bg-center relative"
                      style=`background-image: url('${frontmatter.pm1}')`>
                      </div>
                      <img src=`${frontmatter.dekorfs}` alt="JejakBahagia" class="absolute">
                    </div>
                </div>
              </div>
              
              <h3 class=`fade-down opacity-0 text-6xl mt-6 font-great ${frontmatter.txth}`>{ frontmatter.female }</h3>
              <div class=`fade-up opacity-0 font-josefin space-y-3 ${frontmatter.txth}`>
                <p class=`text-xl font-medium border-b-2 ${frontmatter.bdr}`>{ frontmatter.fullfemale }</p>
                <p class="text-lg">{frontmatter.childfemale}</p>
                <p class="text-lg font-medium">
                  { frontmatter.parentfemale }</p>
                <p>{frontmatter.cityfemale}</p>
                <div class="flex text-center justify-center mt-4">
                  <a href={`https://www.instagram.com/${frontmatter.instagramfemale}`} class="flex flex-row gap-2 items-center">
                    <Icon name="mdi:instagram" class=`w-10 h-10 p-2 rounded-full ${frontmatter.txfs} ${frontmatter.bgth}` />
                  </a>
                </div>
              </div>
            </div>
            <div class="w-full flex flex-col items-center">
              <div class="fade-left opacity-0">
                <div class="relative flex items-center justify-center w-full">
                    <div class="relative flex items-center justify-center w-40 md:w-72">
                      <div
                      class="w-28 h-36 md:w-56 md:h-64 bg-cover bg-center relative"
                      style=`background-image: url('${frontmatter.pm2}')`>
                      </div>
                      <img src=`${frontmatter.dekorfs}` alt="JejakBahagia" class="absolute">
                    </div>
                </div>
              </div>
              
              <h3 class=`fade-down opacity-0 text-6xl mt-6 font-great ${frontmatter.txth}`>{ frontmatter.male }</h3>
              <div class=`fade-up opacity-0 font-josefin space-y-3 ${frontmatter.txth}`>
                <p class=`text-xl font-medium border-b-2 ${frontmatter.bdr}`>{ frontmatter.fullmale }</p>
                <p class="text-lg">{frontmatter.childmale}</p>
                <p class="text-lg font-medium">
                  { frontmatter.parentmale }</p>
                <p>{frontmatter.citymale}</p>
                <div class="flex text-center justify-center mt-4">
                  <a href={`https://www.instagram.com/${frontmatter.instagrammale}`} class="flex flex-row gap-2 items-center">
                    <Icon name="mdi:instagram" class=`w-10 h-10 p-2 rounded-full ${frontmatter.txfs} ${frontmatter.bgth}` />
                  </a>
                </div>
              </div>
            </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="animasi6 relative overflow-hidden">
      <div class="container mx-auto py-20 px-6">
        <div class=`text-center my-5 mb-10 ${frontmatter.txfs}`>
          <h2 class="fade-left opacity-0 text-2xl font-bold mt-5 md:mt-0 mb-3 font-josefin">Where & When</h2>
          <h1 class="fade-right opacity-0 text-center font-great text-5xl lg:text-8xl">
            Wedding Day
          </h1>
        </div>
        <div
          class=`grid gird-cols-1 md:grid-cols-2 max-w-screen-md w-full mx-auto justify-center items-center gap-4 mt-5 *:mx-auto *:rounded-2xl *:h-full *:p-12 *:w-full ${frontmatter.txth}`>
          <div class=`fade-right opacity-0 ${frontmatter.bgfs}`>
            <div class="text-center font-josefin">
              <h2 class="text-center font-great text-4xl">Akad Nikah</h2>
              <p class="mt-2 sm:mt-4">{frontmatter.date}</p>
              <p class="mt-2 sm:mt-4 text-md">{frontmatter.timefs}</p>
              <p class="mt-2 sm:mt-4">{frontmatter.addressfs}</p>
              <div class="group">
                <a href={frontmatter.mapsfs}>
                  <button
                class=`mx-auto mt-8 flex items-center justify-center rounded-full px-4 py-2 text-center text-sm font-medium ${frontmatter.txfs} ${frontmatter.bgsc}`
                >Google Maps <Icon name="mdi:google-maps" class="w-6 h-6" /></button
              >
                </a>
              </div>
            </div>
          </div>
          <div class=`fade-left opacity-0 ${frontmatter.bgfs}`>
            <div class="text-center font-josefin">
              <h2 class="text-center font-great text-4xl">Resepsi</h2>
              <p class="mt-2 sm:mt-4">{frontmatter.date}</p>
              <p class="mt-2 sm:mt-4 text-md">{frontmatter.timesc}</p>
              <p class="mt-2 sm:mt-4">{frontmatter.addresssc}</p>
              <div class="group">
                <a href={frontmatter.mapssc}>
                  <button
                class=`mx-auto mt-8 flex items-center justify-center rounded-full px-4 py-2 text-center text-sm font-medium ${frontmatter.txfs} ${frontmatter.bgsc}`
                >Google Maps <Icon name="mdi:google-maps" class="w-6 h-6" /></button
              >
                </a>
              </div>
            </div>
          </div>
        </div>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d873130.0607204797!2d110.1445006182314!3d-7.744660421581015!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e7a575dd9a1912b%3A0xfe00120aebe7a884!2sGraha%20Pradipta%20Jogja%20Expo%20Center!5e0!3m2!1sid!2sid!4v1712983300381!5m2!1sid!2sid" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" class=`fade-up opacity-0 mx-auto mt-12 w-full max-w-3xl h-96 p-2 rounded-lg ${frontmatter.bgfs}`></iframe>
      </div>
    </section>
    <section class="animasi8 relative overflow-hidden">
      <div class="absolute overflow-hidden z-20 w-full h-[100%] [&>*]:absolute [&>*]:object-cover [&>*]:w-1/2 [&>*]:lg:w-1/5">
        <div>
          <img src=`${frontmatter.dekorsc}` class="" alt="JejakBahagia" />
        </div>
        <div class="right-0 top-0">
          <img src=`${frontmatter.dekorsc}` class="rotate-90 right-0 top-0" alt="JejakBahagia" />
        </div>
        <div class="left-0 bottom-0">
          <img src=`${frontmatter.dekorsc}` class="rotate-90 -scale-100" alt="JejakBahagia" />
        </div>
        <div class="bottom-0 right-0">
          <img src=`${frontmatter.dekorsc}` class="rotate-180" alt="JejakBahagia" />
        </div>
      </div>
      <div class="container mx-auto px-6 py-20">
        <div class=`text-center my-5 mb-10 fade-down ${frontmatter.txfs}`>
          <h2 class="fade-down opacity-0 text-xl md:text-2xl font-bold mt-5 font-josefin ">A Glimpse of</h2>
          <h2 class="fade-down opacity-0 text-center font-great text-5xl lg:text-8xl">
            Our Moments
          </h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 max-w-screen-lg mx-auto justify-center gap-2 pb-20 *:w-full *:rounded-lg *:md:max-w-4xl *:p-1 *:relative">
          <div class="fade-right">
            <div class="truncate rounded-lg">
              <img
                src={frontmatter.imgstory1}
                alt="Foto 1"
                class="object-cover aspect-video transition-all duration-700	ease-linear hover:scale-125 hover:duration-700 hover:transition-all hover:ease-linear rounded-lg rounded-lg"
              />
            </div>
          </div>
          <div class="fade-down opacity-0">
            <div class="truncate rounded-lg">
              <img
                src={frontmatter.imgstory2}
                alt="Foto 1"
                class="object-cover aspect-video transition-all duration-700	ease-linear hover:scale-125 hover:duration-700 hover:transition-all hover:ease-linear rounded-lg rounded-lg"
              />
            </div>
          </div>
          <div class="fade-up opacity-0">
            <div class="truncate rounded-lg">
              <img
                src={frontmatter.imgstory3}
                alt="Foto 1"
                class="object-cover aspect-video transition-all duration-700	ease-linear hover:scale-125 hover:duration-700 hover:transition-all hover:ease-linear rounded-lg rounded-lg"
              />
            </div>
          </div>
          <div class="fade-left opacity-0">
            <div class="truncate rounded-lg">
              <img
                src={frontmatter.imgstory4}
                alt="Foto 1"
                class="object-cover aspect-video transition-all duration-700	ease-linear hover:scale-125 hover:duration-700 hover:transition-all hover:ease-linear rounded-lg rounded-lg"
              />
            </div>
          </div>
          <div class="fade-up opacity-0">
            <div class="truncate rounded-lg">
              <img
                src={frontmatter.imgstory5}
                alt="Foto 1"
                class="object-cover aspect-video transition-all duration-700	ease-linear hover:scale-125 hover:duration-700 hover:transition-all hover:ease-linear rounded-lg rounded-lg"
              />
            </div>
          </div>
          <div class="fade-left opacity-0">
            <div class="truncate rounded-lg">
              <img
                src={frontmatter.imgstory6}
                alt="Foto 1"
                class="object-cover aspect-video transition-all duration-700	ease-linear hover:scale-125 hover:duration-700 hover:transition-all hover:ease-linear rounded-lg rounded-lg"
              />
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="animasi9 relative bg-cover bg-no-repeat bg-center bg-fixed overflow-hidden">
      <div class="absolute overflow-hidden z-20 w-full h-[100%] [&>*]:absolute [&>*]:object-cover [&>*]:w-1/2 [&>*]:lg:w-1/5">
        <div>
          <img src=`${frontmatter.dekorsc}` class="" alt="JejakBahagia" />
        </div>
        <div class="right-0 top-0">
          <img src=`${frontmatter.dekorsc}` class="rotate-90 right-0 top-0" alt="JejakBahagia" />
        </div>
      </div>
      <div class="container py-20 px-6 text-center mx-auto relative z-10">
        <div class=`text-center my-10 ${frontmatter.txfs}`>
          <h2 class="fade-right opacity-0 text-5xl lg:text-8xl font-great">Wedding Gift</h2>
          <p class="fade-left opacity-0 max-w-prose mx-auto font-bold mt-5 font-josefin">Doa & restu anda di pernikahan kami cukuplah sebagai bingkisan, namun jika anda ingin memberi lebih, kami dengan senang hati menerimanya dan akan semakin melengkapi kebahagiaan kami.</p>
        </div>
        <div class="flex flex-col md:flex-row gap-8 justify-center items-center w-full max-w-screen-md mx-auto">
          <div class:list={[`fade-down opacity-0 py-8 px-4 md:px-16 mx-auto mt-16 w-full max-w-xs justify-center md:flex mx-auto gap-5 bg-white rounded-lg border-2 ${frontmatter.bdr} shadow-lg`]}>
            <div class="text-center font-poppins flex flex-col items-center">
              <img class="h-8 w-1/2 lg:w-full" src={frontmatter.logoml} alt="JejakBahagia">
              <div class:list={[`mt-4 font-josefin ${frontmatter.txsc}`]}>
                <p class="max-w-prose">{frontmatter.namebankml}</p>
                <span class="copy-content font-bold">{frontmatter.numberbankml}</span>
                <div class="btn-copy pt-5">
                  <button class:list={[`${frontmatter.bgsc} ${frontmatter.txfs} px-5 py-2 rounded-lg`]}>Copy Rekening</button>
                </div>
                <span class="copy-message absolute hidden inset-x-0">Rekening dicopy</span>
              </div>
            </div>
          </div>
          <div class:list={[`fade-up opacity-0 py-8 px-4 md:px-16 mx-auto mt-16 w-full max-w-xs justify-center md:flex mx-auto gap-5 bg-white rounded-lg border-2 ${frontmatter.bdr} shadow-lg`]}>
            <div class="text-center font-poppins flex flex-col items-center">
              <img class="h-8 w-1/2 lg:w-full" src={frontmatter.logofml} alt="JejakBahagia">
              <div class:list={[`mt-5 font-josefin ${frontmatter.txsc}`]}>
                <p class="max-w-prose">{frontmatter.namebankfml}</p>
                <span class="copy-content font-bold">{frontmatter.numberbankfml}</span>
                <div class="btn-copy pt-5">
                  <button class:list={[`${frontmatter.bgsc} ${frontmatter.txfs} px-5 py-2 rounded-lg`]}>Copy Rekening</button>
                </div>
                <span class="copyMessage absolute hidden inset-x-0">Rekening dicopy</span>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
    </section>
    <section class="animasi10 overflow-hidden relative">
      <div class="absolute overflow-hidden z-20 w-full h-[100%] [&>*]:absolute [&>*]:object-cover [&>*]:w-1/2 [&>*]:lg:w-1/5">
        <div class="left-0 bottom-0">
          <img src=`${frontmatter.dekorsc}` class="rotate-90 -scale-100" alt="JejakBahagia" />
        </div>
        <div class="bottom-0 right-0">
          <img src=`${frontmatter.dekorsc}` class="rotate-180" alt="JejakBahagia" />
        </div>
      </div>
      <div class="container py-20 z-50 px-6 text-center mx-auto relative">
        <div class:list={[`text-center my-5 mb-10 ${frontmatter.txfs}`]}>
          <h2 class="fade-right opacity-0 text-4xl md:text-8xl font-great">
            Ucapan & Doa
          </h2>
          <h2 class="fade-right opacity-0 text-xl md:text-2xl font-bold mt-5 font-josefin">Please Confirm Your Attendance</h2>
        </div>

        <Rsvp color="gray-600" />
          
      </div>
    </section>
    <Footerpost />
    <Audio />
    <audio id="myAudio" loop class="hidden">
      <source src=`/assets/${frontmatter.music}.mp3` type="audio/mpeg">
    </audio>
    <Animation /> 
    <Payment />
  </main>
</Noheader>
