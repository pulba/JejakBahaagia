---
import Noheader from '../../layouts/noheader.astro';
import '@fontsource/great-vibes';
import '@fontsource-variable/josefin-sans';
import { Icon } from 'astro-iconify';
import Namatamu from '../../layouts/namatamu.astro'
import Payment from '../../layouts/payment.astro'
import Rsvp from '../../layouts/rsvp.astro'
import Countdown from '../../layouts/countdown.astro'
import Footerpost from '../../layouts/footer-post.astro'
import Audio from '../../layouts/audio.astro'
import Animation from '../../layouts/animation.astro'

const {frontmatter} = Astro.props
---

<Noheader title={frontmatter.title} desc={frontmatter.desc}>
  
  <input type="checkbox" id="toggle" class="peer hidden peer-checked:transition-all peer-checked:duration-700 peer-checked:ease-linear"/>
  <section class=`animasi1 relative h-screen bg-cover bg-center flex items-center overflow-hidden peer-checked:h-0 peer-checked:transition-all peer-checked:duration-700 peer-checked:ease-linear peer-checked:delay-500 before:content-[''] before:bg-gradient-to-t ${frontmatter.from} before:inset-0 before:absolute`
    style={`background-image:url(${frontmatter.cover})`}>
    <div class="absolute overflow-hidden z-20 w-full h-[100%] [&>*]:absolute [&>*]:object-cover [&>*]:w-1/2 [&>*]:lg:w-1/5">
      <div>
        <img src=`${frontmatter.dekorfs}` class="" alt="JejakBahagia" />
      </div>
      <div class="right-0 top-0">
        <img src=`${frontmatter.dekorfs}` class="rotate-90 right-0 top-0" alt="JejakBahagia" />
      </div>
      <div class="left-0 bottom-0 -rotate-90">
        <img src=`${frontmatter.dekorfs}` alt="JejakBahagia" />
      </div>
      <div class="right-0 bottom-0">
        <img src=`${frontmatter.dekorfs}` class="rotate-180 right-0 top-0" alt="JejakBahagia" />
      </div>
    </div>
    <div class="container mx-auto px-6 relative z-50">
      <div class="h-screen  py-12 flex flex-col justify-between items-center relative">
        <div class="flex items-center w-full lg:w-1/2"> 
            <hr class=`animate-faderight flex-grow border w-max ${frontmatter.bdr}`> 
            <span class=`animate-fadedown px-3 text-xl md:text-2xl ${frontmatter.txth}`> 
              Wedding Invitation
            </span> 
            <hr class=`animate-fadeleft flex-grow border w-max ${frontmatter.bdr}`> 
        </div> 
      <div class="flex flex-col justify-end items-center text-black relative overflow-hidden">
          <div class="mx-auto text-center w-screen flex flex-col items-center justify-center">
              <div class=`animate-fadeleft flex flex-col items-center h-max relative   sm:flex-row gap-3 lg:gap-8 font-great text-center text-8xl lg:text-9xl ${frontmatter.txfs}`>
                <span>{ frontmatter.female }</span>
                <span class=`${frontmatter.txth}`> & </span> 
                <span class="leading-normal"> { frontmatter.male } </span> 
              </div>
              <div class=`${frontmatter.txfs}`>
                <h3 class="animate-fadeleft mt-2 font-josefin">Dear Mr./Mrs./Ms.</h3>
                <h4 id="invite-name" class="animate-faderight text-xl font-josefin my-3 capitalize">
                <Namatamu /> nama tamu
                </h4>
              </div>
          </div>
          <label for="toggle" id="toaudio"
              class=`animate-fadeup mt-5 px-6 py-2 relative rounded-full shadow-xl font-bold flex gap-1 ${frontmatter.txsc} ${frontmatter.bgfs}`
              >Open Invitation <Icon name="mdi:love-letter" class="w-5 h-5" /></label>
      </div>
      </div>
    </div>
  </section>
  <main id="myDIV" class=`hidden peer-checked:block ${frontmatter.bgsc}`>
    <section class=`animasi2 relative h-screen bg-cover bg-center mx-auto overflow-hidden before:content-[''] before:bg-gradient-to-t ${frontmatter.from} before:inset-0 before:absolute overflow-hidden`
      style={`background-image:url(${frontmatter.imgsc})`}>
      <div class="absolute overflow-hidden z-20 w-full h-[100%] [&>*]:absolute [&>*]:object-cover [&>*]:w-1/2 [&>*]:lg:w-1/5">
        <div>
          <img src=`${frontmatter.dekorfs}` class="" alt="JejakBahagia" />
        </div>
        <div class="right-0 top-0">
          <img src=`${frontmatter.dekorfs}` class="rotate-90 right-0 top-0" alt="JejakBahagia" />
        </div>
        <div class="left-0 bottom-0 -rotate-90">
          <img src=`${frontmatter.dekorfs}` alt="JejakBahagia" />
        </div>
        <div class="right-0 bottom-0">
          <img src=`${frontmatter.dekorfs}` class="rotate-180 right-0 top-0" alt="JejakBahagia" />
        </div>
      </div> 
      <div class="container mx-auto h-screen flex flex-col justify-center items-center text-white relative z-10 font-josefin">
        <div class="mx-auto text-center flex flex-col items-center">
          <h2 class="animate-faderight text-xl mt-4">The Wedding of</h2>
          <div class=`animate-fadeleft flex flex-col items-center h-max relative   sm:flex-row gap-3 lg:gap-8 font-great text-center text-8xl lg:text-9xl ${frontmatter.txfs}`>
            <span>{ frontmatter.female }</span>
            <span class=`${frontmatter.txth}`> & </span> 
            <span> { frontmatter.male } </span> 
          </div>
          <h2 class=`animate-fadeup px-3 text-xl md:text-2xl ${frontmatter.txfs}`>{frontmatter.date}</h2>
        </div>
      </div>
    </section>
    <section class="animasi3 dh-3/6 overflow-hidden relative">
      <div class="absolute overflow-hidden z-20 w-full h-[100%] [&>*]:absolute [&>*]:object-cover [&>*]:w-1/2 [&>*]:lg:w-1/5">
        <div>
          <img src=`${frontmatter.dekorfs}` class="" alt="JejakBahagia" />
        </div>
        <div class="right-0 top-0">
          <img src=`${frontmatter.dekorfs}` class="rotate-90 right-0 top-0" alt="JejakBahagia" />
        </div>
      </div>
      <div class="container py-20 mx-auto">
        <div class=`flex flex-col text-center items-center ${frontmatter.txfs}`>
          <h2 
            class="fade-down opacity-0 text-center font-great text-6xl lg:text-8xl my-6"
          >
            Quote
          </h2>
          <p 
            class="fade-right opacity-0 sm:max-w-prose px-5 sm:px-0 max-w-none text-sm font-josefin"
          >
            {frontmatter.quote}
          </p>
          
        </div>
      </div>
    </section>
    <section class="animasi4 overflow-hidden">
      <div class="container mx-auto">
        <div class=" flex flex-col text-center items-center">
          <img  src=`${frontmatter.dekorsc}` class="w-40 h-40" alt="JejakBahagia">
        </div>
      </div>
    </section> 
    <section class="animasi5 relative overflow-hidden">
      <div class="absolute overflow-hidden z-20 w-full h-[100%] [&>*]:absolute [&>*]:object-cover [&>*]:w-1/2 [&>*]:lg:w-1/5">
        <div class="left-0 bottom-0">
          <img src=`${frontmatter.dekorfs}` class="rotate-90 -scale-100" alt="JejakBahagia" />
        </div>
        <div class="bottom-0 right-0">
          <img src=`${frontmatter.dekorfs}` class="rotate-180" alt="JejakBahagia" />
        </div>
      </div>
      <div class="container py-20 mx-auto relative z-50">
        <div class=`flex flex-col text-center items-center ${frontmatter.txfs}`>
          <h1 class="fade-right opacity-0 text-center font-great text-6xl lg:text-8xl">
            Bride x Groom
          </h1>
          <p class="fade-left opacity-0 font-medium pb-8 text-lg font-josefin">
            We Are Getting Married
          </p>
        </div>
        <div class="mx-auto p-4">
        <div class="flex flex-col lg:flex-row justify-center items-center gap-11 gap-y-11 max-w-4xl mx-auto [&>*]:text-center">
          <div class="fade-right opacity-0 w-full flex flex-col items-center">
            <div class="relative flex items-center justify-center w-72">
              <div  class="relative flex items-center justify-center w-72">
                <div
                class="w-56 h-64 bg-cover bg-center relative"
                style={`background-image:url(${frontmatter.pm1}); clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);`}>
                </div>
                <img src=`${frontmatter.dekorth}` alt="JejakBahagia" class="absolute">
              </div>
            </div>
            
            <h3  class=`fade-down opacity-0 text-6xl mt-6 font-great ${frontmatter.txfs}`>{ frontmatter.female }</h3>
            <div class=`fade-up opacity-0 font-josefin space-y-3 ${frontmatter.txfs}`>
              <p class="text-xl font-medium border-b-2 border-b-yellow-800">{ frontmatter.fullfemale }</p>
              <p class="text-lg">{frontmatter.childfemale}</p>
              <p class=`text-lg font-medium ${frontmatter.txth}`>
                { frontmatter.parentfemale }</p>
              <p>{frontmatter.cityfemale}</p>
              <div class="flex gap-3 text-center justify-center mt-4">
                <a href={`https://www.instagram.com/${frontmatter.instagramfemale}`} class="flex flex-row gap-2 items-center">
                  <Icon name="mdi:instagram" class=`w-10 h-10 p-2 rounded-full ${frontmatter.txsc} ${frontmatter.bgfs}` />
                </a>
              </div>
            </div>
          </div>
            <div class="fade-left opacity-0 w-full flex flex-col items-center">
                <div class="relative flex items-center justify-center w-72">
                  <div class="relative flex items-center justify-center w-72">
                    <div
                    class="w-56 h-64 bg-cover bg-center relative"
                    style={`background-image:url(${frontmatter.pm2}); clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);`}>
                    </div>
                    <img src=`${frontmatter.dekorth}` alt="JejakBahagia" class="absolute">
                  </div>
                </div>
                <h3  class=`fade-down opacity-0 text-6xl mt-6 font-great ${frontmatter.txfs}`>{ frontmatter.male }</h3>
            <div class=`fade-up opacity-0 font-josefin space-y-3 ${frontmatter.txfs}`>
              <p class="text-xl font-medium border-b-2 border-b-yellow-800">{ frontmatter.fullmale }</p>
              <p class="text-lg">{frontmatter.childmale}</p>
              <p class=`text-lg font-medium ${frontmatter.txth}`>
                { frontmatter.parentmale }</p>
              <p>{frontmatter.citymale}</p>
              <div class="flex gap-3 text-center justify-center mt-4">
                <a href={`https://www.instagram.com/${frontmatter.instagrammale}`} class="flex flex-row gap-2 items-center">
                  <Icon name="mdi:instagram" class=`w-10 h-10 p-2 rounded-full ${frontmatter.txsc} ${frontmatter.bgfs}` />
                </a>
              </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class=`animasi6 relative bg-cover bg-no-repeat bg-center bg-fixed overflow-hidden before:content-[''] before:bg-gradient-to-b ${frontmatter.from} before:to-transparent before:inset-0 before:bg-cover before:absolute`
    style={`background-image:url(${frontmatter.imgstory7})`}>
      <div class="container py-32 mx-auto relative z-10">
        <div class=`text-center my-5 ${frontmatter.txfs}`>
          <h2 class="fade-down opacity-0 text-2xl font-bold mt-5 md:mt-0 mb-3 font-josefin">
            Save The Date</h2>
          <h1 class="fade-right opacity-0 text-center font-great text-4xl md:text-6xl lg:text-8xl">
            Our Happy Day
          </h1>
        </div>
        <div id="timer" class=`fade-up opacity-0 grid grid-cols-2 md:grid-cols-4 gap-y-8 justify-center text-center items-center mt-20 sm:px-20 max-w-3xl mx-auto [&>*]:text-center [&>*]:text-4xl [&>*]:sm:text-6xl [&>*]:font-medium [&>*]:p-1 ${frontmatter.txth}`>
        </div>
        <Countdown/>
      </div>
    </section>
    <section class="animasi7 overflow-hidden relative">
      <div class="absolute overflow-hidden z-20 w-full h-[100%] [&>*]:absolute [&>*]:object-cover [&>*]:w-1/2 [&>*]:lg:w-1/5">
        <div>
          <img src=`${frontmatter.dekorfs}` class="" alt="JejakBahagia" />
        </div>
        <div class="right-0 top-0">
          <img src=`${frontmatter.dekorfs}` class="rotate-90 right-0 top-0" alt="JejakBahagia" />
        </div>
        <div class="left-0 bottom-0">
          <img src=`${frontmatter.dekorfs}` class="rotate-90 -scale-100" alt="JejakBahagia" />
        </div>
        <div class="bottom-0 right-0">
          <img src=`${frontmatter.dekorfs}` class="rotate-180" alt="JejakBahagia" />
        </div>
      </div>
      <div class="container mx-auto py-20 px-6 relative z-50">
        <div class=`text-center my-10 ${frontmatter.txfs}`>
          <h2 class="fade-down opacity-0 text-2xl font-bold mt-5 md:mt-0 mb-3 font-josefin">Where & When</h2>
          <h1 class="fade-right opacity-0 text-center font-great text-5xl lg:text-8xl">
            Wedding Day
          </h1>
        </div>
        <div
          class="grid gird-cols-1 md:grid-cols-2 max-w-4xl w-full mx-auto justify-center items-center gap-4 mt-5 [&>*]:mx-auto [&>*]:rounded-2xl [&>*]:h-full [&>*]:p-12 [&>*]:w-full">
          <div class=`fade-right opacity-0 ${frontmatter.bgfs}`>
            <div class="text-center font-josefin">
              <h2 class=`text-center font-great text-4xl ${frontmatter.txth}`>Akad Nikah</h2>
              <div class=`${frontmatter.txsc}`>
                <p class="mt-2 sm:mt-4 font-bold">{frontmatter.date}</p>
                <p class=`mt-2 sm:mt-4 text-md ${frontmatter.txth}`>{frontmatter.timefs}</p>
                <p class="mt-2 sm:mt-4">{frontmatter.addressfs}</p>
              </div>
              <div class="group">
                <a href={frontmatter.mapsfs}>
                  <button class=`mx-auto mt-8 flex items-center justify-center rounded-full px-4 py-2 text-center text-sm font-medium ${frontmatter.bgsc} ${frontmatter.txfs}`>Google Maps <Icon name="mdi:google-maps" class="w-6 h-6" />
                  </button>
                </a>
              </div>
            </div>
          </div>
          <div class=`fade-left opacity-0 ${frontmatter.bgfs}`>
            <div class="text-center font-josefin">
              <h2 class=`text-center font-great text-4xl ${frontmatter.txth}`>Resepsi</h2>
              <div class=`${frontmatter.txsc}`>
                <p class="mt-2 sm:mt-4 font-bold">{frontmatter.date}</p>
                <p class=`mt-2 sm:mt-4 text-md ${frontmatter.txth}`>{frontmatter.timesc}</p>
                <p class="mt-2 sm:mt-4">frontmatter.addresssc</p>
              </div>
              <div class="group">
                <a href={frontmatter.mapssc}>
                  <button class=`mx-auto mt-8 flex items-center justify-center rounded-full px-4 py-2 text-center text-sm font-medium ${frontmatter.bgsc} ${frontmatter.txfs}`>Google Maps <Icon name="mdi:google-maps" class="w-6 h-6" />
                  </button>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <section class="animasi9 overflow-hidden relative">
      <div class="absolute overflow-hidden z-20 w-full h-[100%] [&>*]:absolute [&>*]:object-cover [&>*]:w-1/2 [&>*]:lg:w-1/5">
        <div>
          <img src=`${frontmatter.dekorfs}` class="" alt="JejakBahagia" />
        </div>
        <div class="right-0 top-0">
          <img src=`${frontmatter.dekorfs}` class="rotate-90 right-0 top-0" alt="JejakBahagia" />
        </div>
        <div class="left-0 bottom-0">
          <img src=`${frontmatter.dekorfs}` class="rotate-90 -scale-100" alt="JejakBahagia" />
        </div>
        <div class="bottom-0 right-0">
          <img src=`${frontmatter.dekorfs}` class="rotate-180" alt="JejakBahagia" />
        </div>
      </div>
      <div class="container mx-auto px-6 py-20 relative z-50">
        <div class=`text-center my-10 ${frontmatter.txfs}`>
          <h2 class="fade-left opacity-0 text-2xl font-bold mt-5 md:mt-0 mb-3 font-josefin">A Glimpse of</h2>
          <h2  class="fade-right opacity-0 text-center font-great text-5xl lg:text-8xl">
            Our Moments
          </h2>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 justify-center gap-2 pb-20 max-w-screen-lg w-full mx-auto [&>*]:p-1 [&>*]:relative">
          <div class="fade-right">
            <div class="truncate">
              <img
                src={frontmatter.imgstory1}
                alt="Foto 1"
                class="object-cover aspect-video transition-all duration-700	ease-linear hover:scale-125 hover:duration-700 hover:transition-all hover:ease-linear"
              />
            </div>
          </div>
          <div class="fade-down opacity-0">
            <div class="truncate">
              <img
                src={frontmatter.imgstory2}
                alt="Foto 1"
                class="object-cover aspect-video transition-all duration-700	ease-linear hover:scale-125 hover:duration-700 hover:transition-all hover:ease-linear"
              />
            </div>
          </div>
          <div class="fade-up opacity-0">
            <div class="truncate">
              <img
                src={frontmatter.imgstory3}
                alt="Foto 1"
                class="object-cover aspect-video transition-all duration-700	ease-linear hover:scale-125 hover:duration-700 hover:transition-all hover:ease-linear"
              />
            </div>
          </div>
          <div class="fade-left opacity-0">
            <div class="truncate">
              <img
                src={frontmatter.imgstory4}
                alt="Foto 1"
                class="object-cover aspect-video transition-all duration-700	ease-linear hover:scale-125 hover:duration-700 hover:transition-all hover:ease-linear"
              />
            </div>
          </div>
          <div class="fade-left opacity-0">
            <div class="truncate">
              <img
                src={frontmatter.imgstory5}
                alt="Foto 1"
                class="object-cover aspect-video transition-all duration-700	ease-linear hover:scale-125 hover:duration-700 hover:transition-all hover:ease-linear"
              />
            </div>
          </div>
          <div class="fade-up opacity-0">
            <div class="truncate">
              <img
                src={frontmatter.imgstory6}
                alt="Foto 1"
                class="object-cover aspect-video transition-all duration-700	ease-linear hover:scale-125 hover:duration-700 hover:transition-all hover:ease-linear"
              />
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="animasi9 relative bg-cover bg-no-repeat bg-center bg-fixed py-20 overflow-hidden">
      <div class="container px-6 text-center mx-auto relative z-10">
        <div class=`text-center my-10 ${frontmatter.txfs}`>
          <h2 class="fade-right opacity-0 text-5xl lg:text-8xl font-great">Wedding Gift</h2>
          <p class="fade-left opacity-0 max-w-prose mx-auto font-bold mt-5 font-josefin">Doa & restu anda di pernikahan kami cukuplah sebagai bingkisan, namun jika anda ingin memberi lebih, kami dengan senang hati menerimanya dan akan semakin melengkapi kebahagiaan kami.</p>
        </div>
        <div class="flex flex-col md:flex-row gap-8 justify-center items-center w-full max-w-screen-md mx-auto">
          <div class:list={[`fade-down opacity-0 py-8 px-4 md:px-16 mx-auto mt-16 w-full max-w-xs justify-center md:flex mx-auto gap-5 bg-white rounded-lg border-2 ${frontmatter.bdr} shadow-lg`]}>
            <div class="text-center font-poppins flex flex-col items-center">
              <img class="h-8 w-1/2 lg:w-full" src={frontmatter.logoml} alt="JejakBahagia">
              <div class:list={[`mt-4 font-josefin ${frontmatter.txsc}`]}>
                <p class="max-w-prose">{frontmatter.namebankml}</p>
                <span class="copy-content font-bold">{frontmatter.numberbankml}</span>
                <div class="btn-copy pt-5">
                  <button class:list={[`${frontmatter.bgsc} ${frontmatter.txfs} px-5 py-2 rounded-lg`]}>Copy Rekening</button>
                </div>
                <span class="copy-message absolute hidden inset-x-0">Rekening dicopy</span>
              </div>
            </div>
          </div>
          <div class:list={[`fade-up opacity-0 py-8 px-4 md:px-16 mx-auto mt-16 w-full max-w-xs justify-center md:flex mx-auto gap-5 bg-white rounded-lg border-2 ${frontmatter.bdr} shadow-lg`]}>
            <div class="text-center font-poppins flex flex-col items-center">
              <img class="h-8 w-1/2 lg:w-full" src={frontmatter.logofml} alt="JejakBahagia">
              <div class:list={[`mt-5 font-josefin ${frontmatter.txsc}`]}>
                <p class="max-w-prose">{frontmatter.namebankfml}</p>
                <span class="copy-content font-bold">{frontmatter.numberbankfml}</span>
                <div class="btn-copy pt-5">
                  <button class:list={[`${frontmatter.bgsc} ${frontmatter.txfs} px-5 py-2 rounded-lg`]}>Copy Rekening</button>
                </div>
                <span class="copyMessage absolute hidden inset-x-0">Rekening dicopy</span>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
    </section>
    <section class="animasi10 overflow-hidden relative">
      <div class="absolute overflow-hidden z-20 w-full h-[100%] [&>*]:absolute [&>*]:object-cover [&>*]:w-1/2 [&>*]:lg:w-1/5">
        <div>
          <img src=`${frontmatter.dekorfs}` class="" alt="JejakBahagia" />
        </div>
        <div class="right-0 top-0">
          <img src=`${frontmatter.dekorfs}` class="rotate-90 right-0 top-0" alt="JejakBahagia" />
        </div>
        <div class="left-0 bottom-0">
          <img src=`${frontmatter.dekorfs}` class="rotate-90 -scale-100" alt="JejakBahagia" />
        </div>
        <div class="bottom-0 right-0">
          <img src=`${frontmatter.dekorfs}` class="rotate-180" alt="JejakBahagia" />
        </div>
      </div>
      <div class="container py-20 z-50 px-6 text-center mx-auto relative">
        <div class:list={[`text-center my-5 mb-10 ${frontmatter.txsc}`]}>
          <h2 class="fade-right opacity-0 text-4xl md:text-8xl font-montecarlo">
            Ucapan & Doa
          </h2>
          <h2 class="fade-right opacity-0 text-xl md:text-2xl font-bold mt-5 font-josefin">Please Confirm Your Attendance</h2>
        </div>

        <Rsvp color="gray-600" />
          
      </div>
    </section>
    <Footerpost />
    <Audio />
    <audio id="myAudio" loop class="hidden">
      <source src=`/assets/${frontmatter.music}.mp3` type="audio/mpeg">
    </audio>
    <Animation /> 
    <Payment />
    <Animation />
  </main>
</Noheader>
